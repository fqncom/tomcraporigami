<Page
    x:Class="RichTextBlockDemo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RichTextBlockDemo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <RichTextBlock FontSize="30" FontFamily="华文行楷">
            <!--although you have the FontFamily in this computer ,it does't means your mobilePhone has the same FontFamily.so when you use a special FontStyle ,you need to make sure that it will work on others' mobilePhone.-->
            <Paragraph  FontFamily="华文行楷">
                <!-- actually ,the property FontFamily is not useful in this tag -->
                this is a very long text that you may take a long time to read it .and because of that ,you should give up to do this foolish reading action .and go doing something else useful.
            </Paragraph>
        </RichTextBlock>

        <Button Click="Button_Click" Content="goto textboxDemo"/>

    </Grid>
</Page>
