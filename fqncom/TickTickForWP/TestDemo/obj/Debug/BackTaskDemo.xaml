<Page
    x:Class="TestDemo.BackTaskDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TestDemo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel HorizontalAlignment="Center">

            <Button x:ConnectionId='1' Name="registerButton" 
                        Content="注册后台任务"
                                                     />
            <Button x:ConnectionId='2' Name="cancelButtton"
                    Content="取消后台任务"
                                               />
            <TextBlock Text=" 后台任务状态"
                         FontSize="25"/>
            <TextBlock Name="statusText"
                        Text="未注册"
                       FontSize="25"/>
            <TextBlock Text=" 后台任务进度"
                         FontSize="25"/>
            <TextBlock Text="未开始进行"
                       Name="progressText"
                       FontSize="25">

            </TextBlock>

        </StackPanel>
    </Grid>
</Page>

