<Page x:Class="TickTick.Views.SettingDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:TickTick.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      DataContext="{Binding ViewModel,
                            RelativeSource={RelativeSource Self}}"
      mc:Ignorable="d">
    <Page.Transitions>
        <TransitionCollection>
            <EdgeUIThemeTransition Edge="Bottom" />
        </TransitionCollection>
    </Page.Transitions>
    <Page.Resources>
        <Style TargetType="TextBox">
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock FontSize="24"
                                   Foreground="Black"
                                   Text="{Binding}" />
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock FontSize="24"
                                   Foreground="Black"
                                   Text="{Binding}" />
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ToggleSwitch">
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="OffContent" Value="关" />
            <Setter Property="OnContent" Value="开" />
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock FontSize="24"
                                   Foreground="Gray"
                                   Text="{Binding}" />
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
                   FontSize="36"
                   Foreground="White"
                   Text="{Binding SettingItem.Name}" />
        <Grid Grid.Row="1">
            <Grid x:Name="gridIntelligentSetting"
                  Margin="24,0"
                  Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <ToggleSwitch x:ConnectionId='1' x:Name="toggleAll" Grid.Row="0"
                              Header="所有"
                              
                              Tag="All"                               />
                <ToggleSwitch x:ConnectionId='2' x:Name="toggleToday" Grid.Row="1"
                              Header="今天"
                              
                              Tag="Today"                               />
                <ToggleSwitch x:ConnectionId='3' x:Name="toggle7Days" Grid.Row="2"
                              Header="最近7天"
                              
                              Tag="Last7Days"                               />
                <ToggleSwitch x:ConnectionId='4' x:Name="toggleCompleted" Grid.Row="3"
                              Header="已完成"
                              
                              Tag="Completed"                                />
            </Grid>
            <Grid x:Name="gridEmailSetting"
                  Margin="24,0"
                  Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <TextBox Grid.Row="0"
                         Header="Email"
                         PlaceholderText="请输入您的Email账户"
                         Text="{Binding UserProfile.UserName}" />
                <PasswordBox Grid.Row="1"
                             Header="Password"
                             PlaceholderText="请输入您的账户密码" />
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0"
                            HorizontalAlignment="Center"
                            Content="Confirm Password"
                            Foreground="Black" />
                    <Button Grid.Column="1"
                            HorizontalAlignment="Center"
                            Content="Cancel"
                            Foreground="Black" />
                </Grid>
            </Grid>
            <Grid x:Name="gridModifiedEmail"
                  Margin="24,0"
                  Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <TextBox Grid.Row="0"
                         Header="Email"
                         PlaceholderText="请输入您的Email账户"
                         Text="{Binding UserProfile.UserName}" />
                <PasswordBox Grid.Row="1"
                             Header="Password"
                             PlaceholderText="请输入您的账户密码" />
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0"
                            HorizontalAlignment="Center"
                            Content="Confirm Email"
                            Foreground="Black" />
                    <Button Grid.Column="1"
                            HorizontalAlignment="Center"
                            Content="Cancel"
                            Foreground="Black" />
                </Grid>
            </Grid>
            <Grid x:Name="gridModifiedPassword"
                  Margin="24,0"
                  Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <PasswordBox Grid.Row="0"
                             Header="Current Password"
                             Password="{Binding UserProfile.Password}"
                             PlaceholderText="请输入您当前的密码" />
                <PasswordBox Grid.Row="1"
                             Header="New Password"
                             PlaceholderText="请输入您的新密码" />
                <PasswordBox Grid.Row="2"
                             Header="Confirm Password"
                             PlaceholderText="请再次输入您的新密码" />
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0"
                            HorizontalAlignment="Center"
                            Content="Confirm Password"
                            Foreground="Black" />
                    <Button Grid.Column="1"
                            HorizontalAlignment="Center"
                            Content="Cancel"
                            Foreground="Black" />
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>

